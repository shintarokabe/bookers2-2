<%= render 'books/list', books: @books %>


<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size:'60x60' %></p>
  <%= link_to users_path(book.user.id) do %>
   <p><%= book.user.name %></p>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>

<%= paginate @books %>