<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label>Option</label>
  <%= f.text_field :body %>
  <%= f.submit "Update Book" %>
<% end %>