<h2>New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %>error
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <%= form_with model:book, local:true do |f| %>
    <label>Title</label>
    <%= f.text_field :title, autofocus: true %>
    <label>Opinion</label>
    <%= f.text_field :body %>
    <%= f.submit "Create Book", class: 'link text-light btn btn-success btm-sm  px-2 my-2'%>
  <% end %>
