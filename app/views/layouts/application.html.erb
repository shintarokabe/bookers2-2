<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="d-flex flex-column vh-100 ">
  <header class="bg-dark font-weight-bold" >
    <nav class="nvbar navbar-expand-lg navbar-light">
      <div class="container">
        <div class="row">
          <a class="navbar-brand col-1 text-light" href="/">Bookers</a>
          <div class="ull-right">
          <button class="navbar-toggler col-7" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown text-right">
            <ul class="navbar-nav ">
              <% if user_signed_in? %>
               <li>
                <%= link_to "Home",user_path(current_user), class: 'fas fa-home nav-link text-light'%>
               </li>
              <li>
                <%= link_to "Users", users_path, class: 'fas fa-users nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: ' fas fa-sign-out-alt nav-link text-light' %>
              </li>
              <% else %>
               <li>
                 <%= link_to "Home", root_path, class: 'fas fa-home nav-link nav-link text-light' %>
               </li>
              <li>
                <%= link_to "About", homes_about_path, class: 'fas fa-link nav-link text-light' %>
              </li>
              <li>
                <%= link_to "sign Up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
              </li>
              <li>
                <%= link_to "login", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
              </li>
              <% end %>
            </ul>
          </div>
          </div>
      </div>
    </nav>
  </header>

  <main>
      <% if flash[:alert] %>
      <div class="alert alert-success">
        <%= flash[:alert] %>
      </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      <% end %>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11">
        <%= yield %>
      </div>
    </div>
  </div>
  </main>


  <footer class="bg-white">
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p></p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
