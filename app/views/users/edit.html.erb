<h2>User info</h2>
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <p class='mt-3'>Image</p>
  <%= f.attachment_field :profile_image %>
  <p class='mt-3'>Introduction</p>
  <%= f.text_field :introduction  %></br>
  <%= f.submit "Update User", class: 'link btn btn-secondary btm-sm mt-2' %>
<% end %>