<h2>User info</h2>
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <h4>Name<h4>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '60x60' %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_field :introduction  %>
  <%= f.submit "Update User" %>
<% end %>