<div class="container px-5">
  <div class="row">
    <div class="col-md-3">

     <%= render 'profile', user: @user %>
     <%= render 'books/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'40x40' %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %><p><%= book.title %></p><% end %>
          </td>
          <td>
            <p><%= book.body %></p>
          </td>
          <td>
            <% if @user == current_user %>
            <%= link_to "Edit", edit_book_path(book.id), class: 'link text-light btn btn-success btm-sm  px-2' %>
            <%end %>
          </td>
          <td>
          <% if @user == current_user %>
          <%= link_to "Destroy", book_path(book.id), method: :delete, class: 'link text-light btn btn-danger btm-sm  px-1' %>
          <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>